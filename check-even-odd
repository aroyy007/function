//C program to check even or odd using functions
#include<stdio.h>
int even(int num);
int main()
{
    int n;
    printf("Enter any number : ");
    scanf("%d",&n);
    if(even(n))
    {
        printf("The number is Even.\n");
    }
    else
    {
        printf("The number is Odd.\n");
    }
    return 0;
}
int even(int num)
{
    return num%2==0;
}
